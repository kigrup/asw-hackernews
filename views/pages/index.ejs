<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body class="container">
        <header><%- include('../partials/header'); %></header>

        <main>
            <div class="jumbotron">
                <h1>Posts</h1>
                <ul>
                    <% posts.forEach(function(post) { %>
                    <li>
                        <strong><%= post.title %></strong>
                        <% if (post.type == 'post/text') { %> <%= post.text %>
                        <% } else { %> <%= post.url%> <% } %>
                    </li>
                    <% }); %>
                </ul>
            </div>
        </main>

        <footer><%- include('../partials/footer'); %></footer>
    </body>
</html>
